@{
    Layout = "_LayouClientShared";
}
@section Css
{
    <link rel="stylesheet" href="~/css/contact.css">
}
<div class="contact-container">
    <div class="contact-info">
        <div class="info-item">
            <div class="info-icon"><i class="fas fa-map-marker-alt"></i></div>
            <div class="info-title">Địa chỉ</div>
            <div class="info-text">Hòa Lạc, Thạch Thật, Hà Nội</div>
        </div>
        <div class="info-item">
            <div class="info-icon"><i class="fab fa-facebook-f"></i></div>
            <div class="info-title">Fanpage</div>
            <div class="info-text">https://www.facebook.com/profile.php?id=61576614797459</div>
        </div>
        <div class="info-item">
            <div class="info-icon"><i class="fas fa-phone-alt"></i></div>
            <div class="info-title">Hotline</div>
            <div class="info-text">12345678910</div>
        </div>
        <div class="info-item">
            <div class="info-icon"><i class="fas fa-envelope"></i></div>
            <div class="info-title">E-mail</div>
            <div class="info-text">nhacola202@gmail.com</div>
        </div>
    </div>
    <div class="contact-form-section">
        <div class="form-logo">
            <img src="../img/logo.jpg" alt="9X Garden" />
        </div>
        <h2 class="form-title">Contact Us</h2>
        <form id="contactForm" class="contact-form">
            <input type="text" name="fullname" placeholder="Họ & Tên*" required>
            <input type="email" name="email" placeholder="Email*" required>
            <input type="text" name="phone" placeholder="Số điện thoại">
            <textarea name="message" placeholder="Nội dung" rows="4" required></textarea>
            <button type="submit">Gửi</button>
            <div class="form-message" id="formMessage"></div>
        </form>
    </div>
    <div class="contact-map">
        <iframe src="https://www.google.com/maps?q=FPT+University+Hanoi&output=embed" width="100%" height="350"
                style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
    </div>
</div>
@section Script
{
    <script src="~/js/cart.js"></script>
    <script src="~/js/contact.js"></script>
}
