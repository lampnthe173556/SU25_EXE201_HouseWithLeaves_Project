@{
    Layout = "_LayouClientShared";
    var productId = ViewData["ProductId"];
}
@section Css
{
<link rel="stylesheet" href="~/css/productDetail.css">
}
<div class="container">
    <div class="product-detail-container">
        <div class="product-detail-main">
            <div class="product-detail-gallery">
                <div class="product-detail-image-main">
                    <img id="mainProductImage" src="https://via.placeholder.com/600x600?text=Main+Image" alt="Ảnh sản phẩm">
                    <button class="zoom-btn"><i class="fa fa-search-plus"></i></button>
                </div>
                <div class="product-detail-thumbnails" id="productThumbnails">
                    <img src="https://via.placeholder.com/600x600?text=Image+1" class="active">
                    <img src="https://via.placeholder.com/600x600?text=Image+2">
                    <img src="https://via.placeholder.com/600x600?text=Image+3">
                </div>
            </div>
            <div class="product-detail-info">
                <h1 class="product-detail-title" id="productTitle"></h1>
                <div class="product-detail-price" id="productPrice"></div>
                <ul class="product-detail-meta" id="productMeta">
                    <!-- Thông tin meta sẽ render ở đây -->
                </ul>
                <div class="product-detail-qty">
                    <input type="number" id="qtyInput" min="1" value="1">
                    <button id="addToCartBtn">MUA HÀNG</button>
                </div>
            </div>
        </div>
        <div class="product-detail-tabs">
            <button class="tab-btn active" data-tab="desc">MÔ TẢ</button>
            <!-- <button class="tab-btn" data-tab="faq">FAQ</button> -->
        </div>
        <div class="product-detail-tab-content" id="tabDesc"></div>
        <div class="product-detail-tab-content" id="tabFaq" style="display:none"></div>
    </div>
    <div class="bestseller-section">
        <div class="bestseller-header">

            <h2 class="bestseller-title">SẢN PHẨM TƯƠNG TỰ</h2>

        </div>
        <div class="bestseller-list">
            <!-- Sản phẩm sẽ được render ở đây -->
            @foreach (var product in ViewBag.productSame)
            {
                <div class="product-card">
                    <img src="@((product.ProductImages != null && product.ProductImages.Count > 0) ? product.ProductImages[0].ImageUrl : "")" alt="" />
                    <a class="name" href="/ProductDetail/Index/@product.ProductId">@product.ProductName</a>
                    <div class="price">@string.Format("{0:N0}₫", product.Price)</div>
                </div>
            } 
        </div>
    </div>
</div>
@section Script
{
    <script>
        window.productId = '@ViewData["ProductId"]';
    </script>
    <script src="~/js/productDetail.js"></script>
    <script src="~/js/cart.js"></script>
}
