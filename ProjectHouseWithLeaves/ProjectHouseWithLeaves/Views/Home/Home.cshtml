@{
    Layout = "_LayouClientShared";
}
@section Css
{
    <link rel="stylesheet" href="~/css/home.css">
}
<!-- Hero Section -->
<section class="hero">
    <img class="hero-bg" src="hero.jpg" alt="">
    <div class="hero-content">
        <h1>CÂY CẢNH MINI KHÔNG TRỒNG ĐẤT</h1>
        <p>PHƯƠNG PHÁP TRỒNG CÂY THEO PHONG CÁCH NHẬT BẢN</p>
        <a href="shop.html" class="hero-btn">SHOP NOW</a>
    </div>
    <img class="brush" src="brush.png" alt="">
</section>

<!-- DANH MỤC SẢN PHẨM -->
<section class="categories">
    <div class="section-title">
        <div class="section-squiggle">~~~</div>
        <div class="section-sub">THE BEST COLLECTION</div>
        <h2>DANH MỤC SẢN PHẨM</h2>
    </div>
    <div class="category-grid">
        <div class="category-item category-large">
            <img src="cat1.jpg" alt="Cây để sàn - Góc nhà">
            <div class="cat-label">CÂY ĐỂ SÀN - GÓC NHÀ</div>
        </div>
        <div class="category-item">
            <img src="cat2.jpg" alt="Cây để bàn">
            <div class="cat-label">CÂY ĐỂ BÀN</div>
        </div>
        <div class="category-item">
            <img src="cat3.jpg" alt="Terrarium">
            <div class="cat-label">TERRARIUM</div>
        </div>
        <div class="category-item">
            <img src="cat4.jpg" alt="Phụ kiện">
            <div class="cat-label">PHỤ KIỆN</div>
        </div>
        <div class="category-item">
            <img src="cat5.jpg" alt="Chậu trồng">
            <div class="cat-label">CHẬU TRỒNG</div>
        </div>
    </div>
</section>

<!-- SẢN PHẨM BÁN CHẠY -->
<section class="best-seller">
    <div class="section-title">
        <div class="section-squiggle">~~~</div>
        <div class="section-sub">THE MOST TRENDY</div>
        <h2>SẢN PHẨM BÁN CHẠY</h2>
    </div>

    <div class="product-list">
        <div class="product-card" data-category="desk">
            <img src="sp1.jpg" alt="">
            <a class="name" href="/ProductDetail/Index">Akira x Vạn Lộc Trắng</a>
            <div class="price">350,000₫</div>
        </div>
        <div class="product-card" data-category="desk">
            <img src="sp2.jpg" alt="">
            <a class="name" href="../html/productDetail.html">Akira x Vạn Lộc</a>
            <div class="price">350,000₫</div>
        </div>
        <div class="product-card" data-category="desk">
            <img src="sp3.jpg" alt="">
            <a class="name" href="../html/productDetail.html">Akira x Trường Sinh</a>
            <div class="price">350,000₫</div>
        </div>
        <div class="product-card" data-category="desk">
            <img src="sp4.jpg" alt="">
            <a class="name" href="../html/productDetail.html">Akira x Trầu Bà Vàng</a>
            <div class="price">350,000₫</div>
        </div>
        <div class="product-card" data-category="terrarium">
            <img src="sp5.jpg" alt="">
            <a class="name" href="../html/productDetail.html">Akira x Trầu Bà Neon</a>
            <div class="price">350,000₫</div>
        </div>
        <div class="product-card" data-category="terrarium">
            <img src="sp6.jpg" alt="">
            <a class="name" href="../html/productDetail.html">Akira x Trầu Bà Cẩm Thạch</a>
            <div class="price">350,000₫</div>
        </div>
        <div class="product-card" data-category="floor">
            <img src="sp7.jpg" alt="">
            <a class="name" href="../html/productDetail.html">Akira x Phát Tài Úc</a>
            <div class="price">350,000₫</div>
        </div>
        <div class="product-card" data-category="floor">
            <img src="sp8.jpg" alt="">
            <a class="name" href="../html/productDetail.html">Akira x Môn Trắng</a>
            <div class="price">350,000₫</div>
        </div>
    </div>
</section>

@section Script
{
    <script src="~/js/cart.js"></script>
    <script src="~/js/home.js"></script>
}